{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      // Currently we have to manually map the modules.
      // Dont forget to add it in webpack.mix.js as well.
      "@user/*": ["modules/User/Resources/js/*"]
    },
    "types": ["@types/node", "webpack-env", "vite/client"]
  },
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.vue",
    "modules/**/*.ts",
    "modules/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
